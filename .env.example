# Mode: dry-run (default), paper, live
MODE=dry-run

# Exchange to use (currently supports: alpaca)
EXCHANGE=alpaca

# Alpaca credentials (paper by default if ALPACA_BASE_URL contains 'paper')
ALPACA_API_KEY_ID=your_key
ALPACA_API_SECRET_KEY=your_secret
# Optional: https://paper-api.alpaca.markets for paper
ALPACA_BASE_URL=https://paper-api.alpaca.markets

# Risk controls
RISK_MAX_NOTIONAL_PER_TRADE=25
RISK_MAX_SYMBOL_EXPOSURE_PCT=0.4
RISK_DAILY_LOSS_CAP_PCT=0.1
RISK_MIN_PRICE=1.0
RISK_MAX_SPREAD_PCT=0.03
RISK_ALLOW_AFTER_HOURS=false
